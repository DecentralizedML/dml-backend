APP="dml"

BUILD_HOST="dml-api.dev.kyokan.io"
BUILD_USER="deploy"
BUILD_AT="/home/deploy/app/build"

PRODUCTION_HOSTS="dml-api.dev.kyokan.io"
PRODUCTION_USER="deploy"
DELIVER_TO="/home/deploy/app/release"

GIT_CLEAN_PATHS="_build rel priv/generated"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/deploy/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
